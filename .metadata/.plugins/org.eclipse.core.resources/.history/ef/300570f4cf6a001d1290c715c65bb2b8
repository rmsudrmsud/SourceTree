<!DOCTYPE html>
<html>
<head>
<meta charset="EUC-KR">
<title>Insert title here</title>
<script type="text/javascript">
let cnt = 1;
const add = () => {
	//새 요소 생성
	let newBtn = document.createElement("input");
	//요소에 속성 추가
	newBtn.setAttribute("type", "button");
	newBtn.setAttribute("value", "btn_"+cnt);
	newBtn.setAttribute("id", "btn_"+cnt);
	cnt++;
	let list = document.getElementById("list");
	list.appendChild(newBtn);//마지막 자식으로 추가
}

const del = () => {
	let numEl = document.getElementById("delNum");
	let num = numEl.value;
	let list = document.getElementById("list");
	let delEl = document.getElementById("btn_"+num);
	list.removeChild(delEl);
}
</script>
</head>
<body>
<h3>요소 추가, 삭제</h3>
<input type="button" value="버튼 추가" onclick="add()"><br/>
삭제할 버튼 번호:<input type="number" id="delNum">
<input type="button" value="삭제" onclick="del()"><br/>
<div id="list">
</div>
</body>
</html>