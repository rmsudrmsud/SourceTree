let movies = [{"title":"movie1","img":"../project/netflix/movie1.jpg"},
	{"title":"movie2","img":"../project/netflix/movie2.jpg"},
	{"title":"movie3","img":"../project/netflix/movie3.jpg"},
	{"title":"movie4","img":"../project/netflix/movie4.jpg"},
	{"title":"movie5","img":"../project/netflix/movie5.jpg"},
	{"title":"movie6","img":"../project/netflix/movie6.jpg"},
	{"title":"movie7","img":"../project/netflix/movie7.jpg"},
	{"title":"movie8","img":"../project/netflix/movie8.jpg"},
	{"title":"movie9","img":"../project/netflix/movie9.jpg"},
	{"title":"movie10","img":"../project/netflix/movie10.jpg"}];
	
let cmovies = [{"title":"cmovie1","img":"../project/netflix/cmovie1.jpg"},
	{"title":"cmovie2","img":"../project/netflix/cmovie2.jpg"},
	{"title":"cmovie3","img":"../project/netflix/cmovie3.jpg"},
	{"title":"cmovie4","img":"../project/netflix/cmovie4.jpg"},
	{"title":"cmovie5","img":"../project/netflix/cmovie5.jpg"},
	{"title":"cmovie6","img":"../project/netflix/cmovie6.jpg"},
	{"title":"cmovie7","img":"../project/netflix/cmovie7.jpg"},
	{"title":"cmovie8","img":"../project/netflix/cmovie8.jpg"},
	{"title":"cmovie9","img":"../project/netflix/cmovie9.jpg"},
	{"title":"cmovie10","img":"../project/netflix/cmovie10.jpg"}];
	
const detail =(idx, num) => {
	let obj = null;
	if(num==1){
		obj = movies[idx];	
	}else if(num==2){
		obj = cmovies[idx];
	}else{
		return;
	}
	localStorage.setItem("title", obj.title);
	localStorage.setItem("img", obj.img);
	//localStorage.setItem("img2", obj2.img);
	location.href = "info.html";
}
</script>
