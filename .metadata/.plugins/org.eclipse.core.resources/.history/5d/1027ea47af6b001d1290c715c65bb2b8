	for(i=0;i<movies.length;i++){
		let obj = movies[i];
		document.write("<td>");
		document.write("<img style='width:130px;height:100px;' src='"+obj.img+"' onclick='detail("+i+", 1)'><br/>");
		document.write("</td>")
	}
	document.write("</tr>");
</script>
