<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Insert title here</title>
<script type="text/javascript">
let cnt=1;
const add = () => {
	//새 요소 생성
	let newBtn = document.createElement("input")
	//요소의 속성을 추가 :setAttribute
	newBtn.setAttribute("type","button");
	newBtn.setAttribute("value","btn_"+cnt);
	newBtn.setAttribute("id","btn_"+cnt); //id로 구분할수있게
	cnt++;
	
	let list = document.getElementById("list");
	//마지막 자식으로 추가 자식 : 요소바로밑의 하위요소
	list.appendChild(newBtn);
}

const del = () => {
	let numEl = document.getElementById("delNum");
	let num = numEl.value; //입력한숫자 num에담기
	let list = document.getElementById("list");
	let delEl = document.getElementById("btn_"+num);
	list.removeChild(delEl);
}

const edit = () => {
	//입력박스에서 변경할 버튼번호 
	let numEl = document.createElement("p");
	let num = numEl.value;
	
	//변경할 새 요소 생성
	let newEl = document.createElement("p");
	newEl.innerHTML = num+ "버튼을 p로 변경";
	let list = document.getElementById("list");
	let oldEl = document.getElementById("btn_"+num);
	list.replaceChild(newEl, oldEl);
}
</script>
</head>
<body>
<h3>요소 추가,삭제</h3>
<input type="button" value="버튼 추가" onclick="add()"><br/>
삭제할 버튼 번호: <input type="number" id="delNum">
<input type="button" value="삭제" onclick="del()"><br/>
버튼을 p로 변경:<input type="number" id="editNum">
<input type="button" value="수정" onclick="edit()"><br/>
<div id="list">
<!-- <input type="button"> -->
</div>
</body>
</html>