<!DOCTYPE html>
<html>
<head>
<meta charset="EUC-KR">
<title>Insert title here</title>
<script type="text/javascript">
//대분류
let cate_0 = ['전자제품', '의류품', '생필품', '애완'];

//중분류
let cate_1 = [['가전','컴퓨터', '음향'], ['정장', '스포츠웨어','방한'], 
	['음식', '생활소품'], ['강아지', '고양이', '기타']];
	
//소분류
let cate_2 = [[['냉장고', '세탁기', 'tv'], ['데스크탑', '노트북', '주변기기'], 
	['스피커', '오디오', '우퍼']],[['상의', '하의'],['스키복', '보드복', '레깅스'], 
['울코트', '다운점퍼', '솜바지']], [['면류', '밥류', '간식'],['조명', '물티슈']],
	[['강아지 간식', '강아지 패드'], ['고양이 간식', '고양이 패드'], 
		['기타 간식', '기타 패드']]];
		
let c1=0, c2=0, c3=0;
window.onload = () => {
	let sel1 = document.getElementById("sel1");
	let txt = "";
	for(i=0;i<cate_0.length;i++){
		txt += "<option value="+i+">"+cate_0[i]+"</option>";
	}
	sel1.innerHTML = txt;
	
	//요소에 이벤트 핸들러 등록
	sel1.addEventListener("change", f1);
}

const f1 = () => {
	
	let thEl2 = document.getElementById("th_cate2");
	if(thEl2 != null){
		location.reload();
		return;
	}
	
	
	let val = f.sel1.value;//대분류 선택값. 
	c1 = parseInt(val);
	let arr = cate_1[c1];//선택한 대분류에 속하는 중분류 값을 추출
	
	//첫번째 줄 <tr></tr>요소 추출
	let tr1 = document.getElementById("tr1");
	
	//id가 th_cate1인 요소 검색. 중분류 출력할 제목칸이 있나없나 확인
	let thEl = document.getElementById("th_cate1");
	
	//th_cate1인 요소가 없으면 생성
	if(thEl==null){
		//th요소 생성
		thEl = document.createElement("th");
		//id를 th_cate1로 설정
		thEl.setAttribute("id", "th_cate1");
		//칸의 내용으로 제목출력
		thEl.innerHTML = "중분류";
		//tr1 요소에 자식으로 추가
		tr1.appendChild(thEl);
	}
	
	//두번째 줄. id가 tr2인 <tr></tr>요소 추출
	let tr2 = document.getElementById("tr2");
	
	//중분류 선택할 셀렉트 박스를 넣을 td칸이 있나 없나 확인
	let td = document.getElementById("td_cate1");
	
	//두번째 줄에 id가 td_cate1인 없으면 칸 생성
	if(td==null){
		//td 요소 생성
		td = document.createElement("td");
		//td의 id를 td_cate1로 지정
		td.setAttribute("id", "td_cate1");
		
		//생성한 칸을 두번째 줄에 자식으로 추가 
		tr2.appendChild(td);
	}
	let txt = "";
	txt += "<select id='sel2' name='sel2'>";
	for(i=0;i<arr.length;i++){
		txt += "<option value="+i+">"+arr[i]+"</option>";
	}
	txt += "</select>";
	
	//칸의 내용으로 중분류 선택 셀렉트 박스 작성
	td.innerHTML = txt;
	let sel2 = document.getElementById("sel2");
	sel2.addEventListener("change", f2);
}

const f2 = () => {
	c2 = parseInt(f.sel2.value);
	let arr = cate_2[c1][c2];
	
	//첫번째 줄 <tr></tr>요소 추출
	let tr1 = document.getElementById("tr1");
	
	//id가 th_cate2인 요소 검색. 중분류 출력할 제목칸이 있나없나 확인
	let thEl = document.getElementById("th_cate2");
	
	//th_cate2인 요소가 없으면 생성
	if(thEl==null){
		//th요소 생성
		thEl = document.createElement("th");
		//id를 th_cate1로 설정
		thEl.setAttribute("id", "th_cate2");
		//칸의 내용으로 제목출력
		thEl.innerHTML = "소분류";
		//tr1 요소에 자식으로 추가
		tr1.appendChild(thEl);
	}
	
	//두번째 줄. id가 tr2인 <tr></tr>요소 추출
	let tr2 = document.getElementById("tr2");
	
	//소분류 선택할 셀렉트 박스를 넣을 td칸이 있나 없나 확인
	let td = document.getElementById("td_cate2");
	
	//두번째 줄에 id가 td_cate2인 없으면 칸 생성
	if(td==null){
		//td 요소 생성
		td = document.createElement("td");
		//td의 id를 td_cate1로 지정
		td.setAttribute("id", "td_cate2");
		
		//생성한 칸을 두번째 줄에 자식으로 추가 
		tr2.appendChild(td);
	}
	let txt = "";
	txt += "<select id='sel3' name='sel3'>";
	for(i=0;i<arr.length;i++){
		txt += "<option value="+i+">"+arr[i]+"</option>";
	}
	txt += "</select>";
	
	//칸의 내용으로 중분류 선택 셀렉트 박스 작성
	td.innerHTML = txt;
	let sel3 = document.getElementById("sel3");
	sel3.addEventListener("change", f3);
}

const f3 = () => {
	c3 = parseInt(f.sel3.value);
	let resDiv = document.getElementById("res");
	let txt = cate_0[c1]+" / "+cate_1[c1][c2]+" / "+cate_2[c1][c2][c3];
	resDiv.innerHTML = txt;
}
</script>
</head>
<body>
<h3>상품 분류 선택</h3>
<form name="f">
<table>
<tr id="tr1"><th>대분류</th></tr>
<tr id="tr2"><td><select id="sel1" name="sel1"></select></td></tr>
</table>
</form>
<div id="res"></div>
</body>
</html>