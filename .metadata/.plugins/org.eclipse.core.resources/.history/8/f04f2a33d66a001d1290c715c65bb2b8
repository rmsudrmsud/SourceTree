<head>
<meta charset="UTF-8">
<title>Insert title here</title>
<script type="text/javascript">
let cnt = 1;
const addBoard = () => {
	let name = addForm.writer.value;
	let cont = addForm.content.value;
	
	let listDiv = document.getElementById("list");
	let newEl = document.createElement("div"); //새 div생성
	newEl.setAttribute("id","div_"+cnt);
	newEl.style.border = "1px solid black";
	let txt = "";
	txt += "writer:"+name+"<br/>"
	txt += "content:"+cont+"<br/>"
	txt += "<input type='button' value='수정'>";
	txt += "<input type='button' value='삭제'>";
	newEl.innerHTML = txt;
	listDiv.appendChild(newEl);
	
}
</script>
</head>
<body>
<h3>실시간 댓글</h3>
<form action="" name="addForm">
<table id="t1" border="1">
<tr>
	<th>작성자</th>
	<td><input type="text" id="writer" name="writer"></td>
</tr>
<tr>
	<th>내용</th>
	<td><input type="text" id="content" name="content"></td>
</tr>
<tr>
	<th>저장</th>
	<td><input type="button" value="작성" onclick="addBoard()"></td>
</tr>
</table>
</form>
