<script>
const a = () => {
	let priceDom = document.getElementId("price");
	let txt = priceDom.innerHTML; //txt: 가격:29000 인상태
	let arr = txt.split(":"); // split : 구분자(:)가 있을 때 문자와 숫자를 배열로 쪼개줌->(txt 가격: 0번째방, 29000 : 1번째 방)
	let price = parseInt(arr[1]); //1번방에 들어가있는 값을 숫자형태로 변환(parseInt). 
	alert("price:"+price);
}


</script>
</head>
