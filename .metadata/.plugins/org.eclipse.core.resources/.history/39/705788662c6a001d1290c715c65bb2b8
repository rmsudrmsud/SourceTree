<script type="text/javascript">
//헤드 이미지 배열에 저장
let headImgs = ["head1.jpg","head2.jpg","head3.jpg","head4.jpg","head5.jpg","head6.jpg"];
let cnt = 0;

let prods = [{"title":"필립스 데일리 토스트기", "price":29000, 
	"info":"내일 도착 보장", "img":"../img/1/1_1.jpg"},
	{"title":"하이프리 니트 보풀제거기", "price":13000, 
		"info":"내일 도착 보장", "img":"../img/1/1_2.jpg"},
	{"title":"비달사순 토르말린 세라믹 이온", "price":129000, 
		"info":"내일 도착 보장", "img":"../img/1/1_3.jpg"},
	{"title":"한일전자 싸이클론 드라이기", "price":25000, 
		"info":"11/23일 도착보장", "img":"../img/1/1_4.jpg"},
	{"title":"필립스 데일리 토스트기", "price":29000, 
		"info":"내일 도착 보장", "img":"../img/1/1_5.jpg"},
	{"title":"신지모루 하이브리드 쉴드", "price":12900, 
		"info":"내일 도착 보장", "img":"../img/1/1_6.jpg"},
	]
const viewH = () => {
	document.headImg.src = "../img/head/"+headImgs[cnt%6];
	cnt++;
	setTimeout(viewH, 1000);//param1함수를 호출, param2시간 뒤.
}

//페이지 로드되자마자 실행
window.onload = () => {
	viewH();
}

const show = (num) => {
	let showDiv = document.getElementById("cate_"+num);
	showDiv.style.display = '';
}

const hide = (num) => {
	let showDiv = document.getElementById("cate_"+num);
	showDiv.style.display = 'none';
}

const detail = (idx) => {	
	let obj = prods[idx];
	localStorage.setItem("title", obj.title);
	localStorage.setItem("price", obj.price);
	localStorage.setItem("info", obj.info);
	localStorage.setItem("img", obj.img);
	//자바스크립트에서 페이지 이동
	location.href = "detail.html";
}
</script>
