<!DOCTYPE html>
<html> <!-- 22/11/21 -->
<head>
<meta charset="UTF-8">
<script type = "text/javascript">

//전역변수-> 전체위치에서 사용가능 (변수를 선언하지않고 사용해도가능->전역변수됨)
name="aaa"; //자바스크립트 문자열표시 : "", '' 둘다가능. 
let hobby ='낚시'; //문자열타입
let age=12; // 숫자타입
let flag = true;//bool타입
let obj = {"name":"bbb", "age":23, "hobby":"수영"}; //객체타입
let arr =['aaa','bbb','ccc']; //배열타입

	document.write("hello javascript~head안녕<br/>"); //html페이지에 출력
	</script>
<title>Insert title here</title>
</head>
<body>
	<script type = "text/javascript">
	document.write("hello javascript~body<br/>"); //html페이지에 출력
	document.write("name:"+name+"<br/>");
	document.write("age:"+age+"<br/>");
	document.write("hobby:"+hobby+"<br/>");
	
	document.write("불린 출력<br/>");
	document.write("flag:"+flag+"<br/>");
	
	document.write("객체출력<br/>");
	document.write("obj.name:"+obj.name+"<br/>");
	document.write("obj.age:"+obj.age+"<br/>");
	document.write("obj.hobby:"+obj.hobby+"<br/>");
	document.write("배열 출력<br/>");
	for(i=0; i<arr.length;i++){ //for문조건에 int i=0 쓰면에러
		document.write(arr[i]+"<br/>");
	}
	
	//변수는 값 변경 가능
name = "ccc";
name = 11;

//상수
const MAX = 100; //소문자는 변수 대문자는 상수(불문율) const -> 상수선언 나중에 값 줄 수 없음
document.write("상수출력<br/>");
document.write("MAX:"+MAX+"<br/>");
//상수는 값 변경이 안됨
MAX = 200; //에러
document.write("MAX:"+MAX+"<br/>");
	</script>
</body>
</html>